<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:MauiHandlerExample.TextEntryControl"
             x:Class="MauiHandlerExample.MainPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Grid.Column="0" Text="This is a standard MAUI Entry: " VerticalOptions="Center" />
        <Label Grid.Row="1" Grid.Column="0" Text="This is a custom TextEntry: " VerticalOptions="Center" />

        <Entry Grid.Row="0" Grid.Column="1" Text="Hello, World!" VerticalOptions="Center" />
        <controls:TextEntry Grid.Row="1" Grid.Column="1" Text="Hello, World!" />
    </Grid>

</ContentPage>
